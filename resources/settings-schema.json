{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zebar Settings Schema",
  "type": "object",
  "properties": {
    "startupConfigs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pack": {
            "type": "string"
          },
          "widget": {
            "type": "string"
          },
          "preset": {
            "type": "string"
          }
        },
        "required": ["pack", "widget", "preset"]
      }
    }
  },
  "required": ["startupConfigs"]
}
